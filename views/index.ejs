
 <%- include('partials/header.ejs') %>

 <main>  
    <div class="box" id="heading">
        <h1>
         <%= locals.listTitle %>
         </h1>
    </div>
    <div class="box createdBox"> 
        <form class="item" action="/" method="post">
          <input type="text" name="newItem" placeholder="New Item" autocomplete="off" required>
          <button type="submit" name="list" value="<%- listTitle %>">+</button>
        </form>
    </div>
    <div class="box createdBox">
        <% tasksForToday.forEach(function(task) { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= task._id %>" onchange="this.form.submit()">
                        <p>  
                            <%= task.name %>
                        </p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>"></input>
            </form>
            <% }); %>    
    </div>
</main>

<%- include('partials/footer.ejs') %>