<%- include('header.ejs') %>

<main>  
    <div class="box" id="heading">
        <h1>
         Work List
         </h1>
    </div>
    <div class="box">   
        <form class="item" action="/work" method="post">
          <input type="text" name="newWorkItem" placeholder="New Item" autocomplete="off">
          <button type="submit" name="list" value="<%- locals.dayName %>">+</button>
        </form>
        <div class="box">   
            <% if(locals.workTasks) { %>
                <% for(i = 0; i < workTasks.length; i++) { %>
                    <div class="item">
                        <input type="checkbox">
                            <p>  
                                <%= workTasks[i] %>
                            </p>
                    </div>
                <%  } %>
            <% } %>   
        </div>   
  </div>
</main>


<%- include('footer.ejs') %>